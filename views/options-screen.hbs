                </div>
                <div class="line">
                    <p id="vida-action">listening</p>
                    </br>
                    <hr id="vida-wave">
                </div>
            </div>

            {{!-- <div id="datetime"></div> --}}
            <div class="date-time col-6">
                <p id="date">Wednesday June 29</p>
                <p id="time">10:12 AM</p>
            </div>
        </div>
    </form>


    <div class="row">
